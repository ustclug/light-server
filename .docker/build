#!/bin/bash

set -x
set -e

build_squid2radius_dependency(){
    apk add python3 py-pip ca-certificates openssl
    pip install pyrad==2.1 --break-system-packages
}

apk update
apk add squid squid-lang-zh supervisor tzdata
build_squid2radius_dependency
mkdir -p \
    /var/log/supervisor \
    /var/log/squid

rm -rf /var/cache/apk/*
rm /etc/logrotate.d/squid
