#!/bin/bash

set -x
set -e

build_squid2radius_dependency(){
    apk add python3 py-pip ca-certificates openssl
    pip install pyrad==2.1 hurry.filesize==0.9
}

apk update
apk add squid squid-lang-zh nghttp2 supervisor tzdata
build_squid2radius_dependency
mkdir -p \
    /var/log/supervisor \
    /var/log/nghttpx \
    /var/log/squid

rm -rf /var/cache/apk/*
rm /etc/logrotate.d/squid
